#include <stdio.h>
#include <stdio.h>

int main() {

    float total = 0;
    int count = 0;
    float note,moyenne;

    printf("Entrez la note (ou une note negative pour terminer)\n");

    while (1) {
        printf("note %d : ", count + 1);
        scanf("%f", &note);


        if (note < 0) {
            break;
        }


        total += note;
        count++;
    }



        moyenne = total / count;


    printf("La moyenne de ces %d notes est : %.2f\n", count, moyenne);

    return 0;
}
